@model MurderGame.Dtos.UserDtos.UserProfileDto
@{
    ViewData["Title"] = "Profil Detayları";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Profil detaylarını güncelleyin.">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/member/profile.css" asp-append-version="true" />
</head>
<body>
    <div class="animated-background"></div>

    <section>
        <div class="container card-0 justify-content-center mt-5">
            <div class="card-body px-sm-4 px-0">
                <div class="row justify-content-center mb-5">
                    <div class="col-md-10 col">
                        <h3 class="font-weight-bold ml-md-0 mx-auto text-center text-sm-left">Profil Bilgilerini Güncelle</h3>
                    </div>
                </div>
                <div class="row justify-content-center round">
                    <div class="col-lg-10 col-md-12">
                        <div class="card shadow-lg card-1">
                            <div class="card-body inner-card">
                                <!-- Başarı ve hata mesajlarını görüntüleme -->
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }
                                <form asp-controller="Member" asp-action="Profile" method="post">
                                    <!-- Model bazlı validasyon özetini göster -->
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row justify-content-center">
                                        <!-- Sol sütun: DisplayName -->
                                        <div class="col-lg-5 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label asp-for="DisplayName">Görünen Ad</label>
                                                <input asp-for="DisplayName" class="form-control" placeholder="Görünen Adınızı yazın" />
                                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Sağ sütun: DateOfBirth ve Location -->
                                        <div class="col-lg-5 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label asp-for="DateOfBirth">Doğum Tarihi</label>
                                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Location">Konum</label>
                                                <input asp-for="Location" class="form-control" placeholder="Konumunuzu girin" />
                                                <span asp-validation-for="Location" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Alt satırda: PhoneNumber -->
                                        <div class="col-lg-10 col-md-12">
                                            <div class="form-group">
                                                <label asp-for="PhoneNumber">Telefon Numarası</label>
                                                <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaranızı giriniz" />
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-lg-4 col-auto d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary btn-block">
                                                <small class="font-weight-bold">Güncelle</small>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Client-side validasyon için gerekli scriptler -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

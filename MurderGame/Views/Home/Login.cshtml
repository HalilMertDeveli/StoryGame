@model MurderGame.Dtos.LoginDtos.LoginDto

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <title>Giriş Yap</title>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                        <!-- Form -->
                        <form method="post" asp-controller="Home" asp-action="Login" style="width: 23rem;">
                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Giriş Yap</h3>

                            <!-- Hata Mesajı Yalnızca Hata Olduğunda Görünecek -->
                            @if (!string.IsNullOrEmpty(ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>Hata!</strong> @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessage"]
                                </div>
                            }

                            <!-- Kullanıcı Adı veya E-Posta -->
                            <div class="form-outline mb-4">
                                <input asp-for="LoginIdentifier" class="form-control form-control-lg" required />
                                <label class="form-label" for="LoginIdentifier">E-Posta veya Kullanıcı Adı</label>
                                <span asp-validation-for="LoginIdentifier" class="text-danger"></span>
                            </div>

                            <!-- Şifre -->
                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" required />
                                <label class="form-label" for="Password">Şifre</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Beni Hatırla -->
                            <div class="form-check mb-4">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
                            </div>

                            <!-- Giriş Butonu -->
                            <div class="pt-1 mb-4">
                                <button type="submit" class="btn btn-info btn-lg btn-block">Giriş Yap</button>
                            </div>

                            <div class="text-center social-buttons mt-5">
                                <p>veya aşağıdakilerle giriş yap:</p>
                                <div class="btn-group">
                                    <!-- Facebook -->
                                    <a asp-controller="Home" asp-action="FacebookLogin" class="btn-social">
                                        <i class="fab fa-facebook-f"></i> Facebook ile Giriş
                                    </a>

                                    <!-- Google -->
                                    <a asp-controller="Home" asp-action="GoogleLogin" class="btn-social">
                                        <i class="fab fa-google"></i> Google ile Giriş
                                    </a>

                                    <!-- Twitter -->
                                    <a asp-controller="Home" asp-action="TwitterLogin" class="btn-social">
                                        <i class="fab fa-twitter"></i> Twitter ile Giriş
                                    </a>

                                    <!-- GitHub -->
                                    <a asp-controller="Home" asp-action="GitHubLogin" class="btn-social">
                                        <i class="fab fa-github"></i> GitHub ile Giriş
                                    </a>
                                </div>
                            </div>



                            <p class="redirect-links">
                                Hesabınız yok mu? 
                                <a asp-controller="Home" asp-action="SingUp">Buradan kayıt olabilirsiniz</a>
                            </p>

                            <!-- Şifremi unuttum -->
                            <p class="redirect-links">
                                <i class="fas fa-question-circle"></i>
                                <a asp-controller="Home" asp-action="ForgotPassword">Şifrenizi mi unuttunuz? Buradan sıfırlayabilirsiniz.</a>
                            </p>
                        </form>
                    </div>
                </div>

                <!-- Sağ Tarafa Görsel -->
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="/Images/Singup/sing_up_4.jpg" alt="Giriş görseli" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>
</body>
</html>

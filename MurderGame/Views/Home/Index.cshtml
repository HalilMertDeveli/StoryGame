
@{
    ViewData["Title"] = "Welcome to Karanlık Han";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('https://via.placeholder.com/1920x1080') no-repeat center center fixed;
            background-size: cover;
            color: #f8f9fa;
        }
        .overlay {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 8px;
        }
        .btn-custom {
            background-color: #6c757d;
            border: none;
        }
        .btn-custom:hover {
            background-color: #495057;
        }
    </style>
</head>
<body>
<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="overlay text-center">
        <h1 class="mb-4">Karanlık Han</h1>
        <p class="mb-4">Hoş geldiniz! Bu karanlık ve gizemli hanın sırlarını çözmeye hazır mısınız?</p>
        <div class="d-grid gap-2">
            <a href="#" class="btn btn-custom btn-lg">Giriş Yap</a>
            <a href="#" class="btn btn-light btn-lg">Kayıt Ol</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
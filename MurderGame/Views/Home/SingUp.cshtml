@using MurderGame.Entities.Domains
@model ApplicationUser

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/Singup.css" asp-append-version="true" />
    <title>Sign Up</title>
    <style>
        .error-card {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .error-card ul {
                padding-left: 20px;
            }

            .error-card li {
                list-style-type: disc;
            }
    </style>
</head>
<body>
    <section>
        <div class="px-4 py-5 px-md-5 text-center text-lg-start">
            <div class="container">
                <div class="col-lg-12 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <!-- Sol Tarafta Form -->
                            <div class="form-container flex-fill">
                                <form enctype="multipart/form-data" asp-controller="Home" asp-action="SingUp" method="post">

                                    <!-- Hata Mesajları için Özel Alan -->
                                    <div asp-validation-summary="All" class="error-card">
                                        <h5>Formu Düzeltmeniz Gerekiyor:</h5>
                                        <ul></ul>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="UserNickName" class="form-control" />
                                        <label class="form-label" for="UserNickName">Kullanıcı Adı</label>
                                        <span asp-validation-for="UserNickName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" class="form-control" />
                                        <label class="form-label" for="Email">E-posta adresi</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="PasswordHash" type="password" class="form-control" />
                                        <label class="form-label" for="PasswordHash">Şifre</label>
                                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                    </div>


                                    <!-- Profil Resmi (Dosya Yükleme) -->
                                    <div class="form-outline mb-4">
                                        <input type="file" id="profilePicture" name="ProfilePicture" class="form-control" />
                                        <label class="form-label" for="profilePicture">Profil Resmi</label>
                                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                    </div>

                                    <!-- Bio -->
                                    <div class="form-outline mb-4">
                                        <textarea id="bio" name="Bio" class="form-control"></textarea>
                                        <label class="form-label" for="bio">Hakkında</label>
                                        <span asp-validation-for="Bio" class="text-danger"></span>
                                    </div>

                                    <!-- Kayıt Ol Butonu -->
                                    <button type="submit" class="btn btn-primary btn-block mb-4">Kayıt Ol</button>

                                    <!-- Sosyal Medya Butonları -->
                                    <div class="text-center social-buttons mt-5">
                                        <p>veya aşağıdakilerle giriş yap:</p>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-link btn-floating">
                                                <i class="fab fa-facebook-f"></i>
                                            </button>
                                            <button type="button" class="btn btn-link btn-floating">
                                                <i class="fab fa-google"></i>
                                            </button>
                                            <button type="button" class="btn btn-link btn-floating">
                                                <i class="fab fa-twitter"></i>
                                            </button>
                                            <button type="button" class="btn btn-link btn-floating">
                                                <i class="fab fa-github"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- Sağ Tarafta Resim -->
                            <div class="image-container">
                                <img src="/Images/Singup/sing_up_1.jpg" alt="Yan Resim" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
